<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.mesen-s"
		name="Nintendo - SNES / SFC / Game Boy / Color (Mesen-S)"
		version="0.4.0.8"
		provider-name="M. Bibaud (aka Sour)">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>sfc|smc|fig|swc|gb|gbc|bs</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.mesen-s</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="en_GB">Nintendo - SNES / SFC / Game Boy / Color (Mesen-S) 0.4.0</summary>
		<description lang="da_DK">Mesen-S er en SNES-emulator på tværs af platforme til Windows og Linux, der er bygget i C++ og C#.</description>
		<description lang="en_GB">Mesen-S is a cross-platform SNES emulator for Windows and Linux built in C++ and C#.</description>
	</extension>
</addon>
